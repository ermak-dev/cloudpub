#account-form, #register-form, #login-form
    width 600px
    margin 0 auto
    margin-top 50px
    border solid gray 2px
    border-radius 25px
    padding 25px
    background-color whiteSmoke

td
    vertical-align middle !important
    text-align center

.megabutton
    clear both

.control
    width 180px
   
td.control
    text-align center

.command img
    padding 0px
    display block

td.service img
    width 48px
    height 48px
    float left

.service h3
    padding 5px

td.service h3
    position relative
    top -10px
    left 10px

.state-down
    background-color #FAA

.state-up
    background-color #AFA

.state-maintain
    background-color #FFA

a.status, a.status:hover
    text-decoration none
    color black

.status-label
    position relative
    top -15px

.item, .message
    margin-left 60px
    display block

.item
    font-size 20px
    margin-bottom 5px

.message
    color gray

.workers
    position relative 
    top 15px
    left -30px
    z-index 1
    font-size 18px
    font-weight bold
