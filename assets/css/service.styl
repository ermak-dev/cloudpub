#account-form, #register-form, #login-form
    width 600px
    margin 0 auto
    margin-top 50px
    border solid gray 2px
    border-radius 25px
    padding 25px
    background-color whiteSmoke

td
    vertical-align middle !important
    text-align center

.megabutton
    clear both

.control
    width 32px
    
.command img
    padding 0px
    display block

.service img
    width 48px
    height 48px
    float left

.service h3
    padding 5px

td.service h3
    position relative
    top -10px
    left 10px

.state-down
    background-color #FAA

.state-up
    background-color #AFA

.state-maintain
    background-color #FFA

a.status, a.status:hover
    text-decoration none
    color black

.workers
    position relative 
    top 15px
    left -30px
    z-index 1
    font-size 18px
    font-weight bold
