@import 'nib'

.main-page
    width 100%
    height 500px
    margin-top 20px
    border-radius 25px
    border solid #CCC 2px
    background-color whiteSmoke
    padding 50px

.demos
    float right
    width 40%

.demos:after
    clear both

.demos .subbox
    padding 20px

a.enter
    display block
    margin 0 auto
    width 200px
    background-color #88F 
    height 200px
    border-radius 100px
    border solid #CCC 2px

a.enter:hover
    background-color #8F8
    text-decoration none

a.enter h2
    color white

a.enter:hover h2
    color black

a.enter img
    display block
    margin 0 auto
    text-align center
    padding 35px
    padding-left 75px
    width 128px
    height 128px

a.enter h2
    position relative
    top -120px
    left 10px

.demos ul
    margin 20px
    top 10px
    list-style none

.demos li
    font-size 25px
    padding 10px
    background-color whiteSmoke
    margin 5px


.facts
    width 55%
    float left


.facts ul
    list-style none
    padding-top 50px

.facts li
    margin 5px
    border solid #EEE 1px
    border-radius 4px
    padding 25px
    background-color whiteSmoke
    font-size 25px
    font-weight bold
    color #333

li.c1
    background-color: #88F

li.c2
    background-color: #FF8

li.c3
    background-color: #8F8

li.c4
    background-color: #8FF
