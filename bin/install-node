#!/bin/sh
set +e

mkdir -p /tmp/cloudpub/
cd /tmp/cloudpub

if [ ! -d node-v0.6.6 ] ; then
    echo "Downloading node"
    wget -q http://nodejs.org/dist/v0.6.6/node-v0.6.6.tar.gz
    tar xzf node-v0.6.6.tar.gz
fi

if [ ! -d ~/cloudpub/runtime ] ; then
    echo "Building node"
    cd node-v0.6.6
    ./configure --prefix ~/cloudpub/runtime
    make
    make install
fi
