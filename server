#!/usr/bin/env node
require('coffee-script');
var settings = require('./settings');
var main = require('./main');

main.init( function(err, server) {
    if(err) {
        main.log.fatal( "Fatal error: " + err.message );
        main.stop();
        process.exit(1);
    } else {
        server.on('error', function(err) {
            main.log.fatal( "Fatal error: " + err.message );
            main.stop();
            process.exit(1);
        });
        main.log.info("Server started on " + settings.INTERFACE + ":" + settings.PORT );
        server.listen( settings.PORT );
    }
});
