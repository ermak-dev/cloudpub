h1 Nodes
table.bordered-table.zebra-striped
    thead
        tr
            th.status Status
            th.service Node Address
            th.control Launch
    tbody
        include instance-inline
    
a.btn.secondary.command(href="#",data-id='new',data-command='start') Start New Node

#start-dialog.modal.hide.fade(style="display:none;")
    .modal-header
        a.close(href="#") × 
        h3 Start Node
    form.modal-body#start-form
        .clearfix
            ul.inputs-list
                li
                    label
                        input.cloud(type="radio", checked="true", name="cloud", value="ec2")
                        b Allocate node from Amazon EC2 cloud
                        span.help-block You will pay for instance usage
                li
                    label
                        input.cloud(type="radio", name="cloud", value="ssh")
                        span Add your own node
                        span.help-block Add node to cluster by SSH
        .clearfix.custom(style='display: none')
                label Node address
                .input
                    input.custom-input.address(type="text",name="address",value="127.0.0.1")
                    span.help-block Enter your node IP address or domain name or allocate from Amazon EC2 cloud
        .clearfix.custom(style='display: none')
                label SSH login
                .input
                    input.custom-input.login(type="text",name="user",value="root")
                    span.help-block Specify user account for node setup
        .clearfix.custom(style='display: none')
                label
                    div SSH public key
                    a(href="#") (Copy)
                .input
                    textarea(rows="3",readonly="true", style="width: 350px; font-size: 9px;") ssh-rsa  cloudpub
                    span.help-block Add this public key to ~/.ssh/authorized_hosts file&nbsp;
    .modal-footer
        a.btn.primary.execute(href="#") Start
        a.btn.secondary.cancel(href="#") Cancel

#stop-dialog.modal.hide.fade(style="display:none;")
    .modal-header
        a.close(href="#") × 
        h3 Stop Instance
    form.modal-body#stop-form
        .clearfix
            label Shut down mode
            .input
                ul.inputs-list
                    li
                        label
                            input(type="radio", checked="true", name="data", value="keep")
                            b Put to maintaince mode
                            span.help-block Instance will be stopped
                    li
                        label
                            input(type="radio", name="data", value="delete")
                            span.red Delete instance
                            span.help-block Instance will be deleted and local cache will be disposed
    .modal-footer
        a.btn.primary.execute(href="#") Stop Instance
        a.btn.secondary.cancel(href="#") Cancel

!= js('/js/instancies.js')
