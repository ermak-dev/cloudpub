- for service in services
    tr.service(class="srow-#{service.state}")
        td.service
            a.status(href="#", title="0 workers, 0.0Gb storage, 0.0Gb bandwith")
                img(src="state-#{service.state}.png")
                .workers 0
            h3= service.name
            
        td.domain
            h3
                a(href="http://#{service.domain}",target="_new")= service.domain
        td.control
            - if(service.state == "down")
                img.btn.command(src="command-start.png",data-sid=service.sid,data-domain=service.domain,data-command="start")
            - else 
                img.btn.command(src="command-stop.png",data-sid=service.sid,data-domain=service.domain,data-command="stop")

